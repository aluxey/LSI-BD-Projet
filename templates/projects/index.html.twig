{% extends 'base.html.twig' %}

{% block title %}Projets - Assosquare{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#0B0C0E] text-white">
    {% include 'components/header.html.twig' %}
    <main class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center mb-3">
            <h1 class="text-3xl font-bold gradient-text">Projets</h1>
            <div class="flex space-x-4 mt-4 md:mt-0">
                {% if is_granted('ROLE_ADMIN') %}
                <button class="btn btn-secondary px-4 py-2">
                    <i class="fas fa-users mr-2"></i> Gérer les membres
                </button>
                {% endif %}
                <button class="btn btn-primary px-4 py-2" onclick="toggleModal()">
                    <i class="fas fa-users mr-2"></i> Nouveau projet
                </button>
            </div>
        </div>


        <div class="card p-6 fade-in" style="animation-delay: 0.1s">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold">La liste de vos projets</h2>
                <div>

                    <button class="btn btn-primary px-3 py-1 text-sm">
                        <i class="fas fa-plus mr-1"></i> Tous
                    </button>
                    <button class="btn btn-secondary px-3 py-1 text-sm">
                        <i class="fas fa-plus mr-1"></i> En cours
                    </button>
                    <button class="btn btn-secondary px-3 py-1 text-sm">
                        <i class="fas fa-plus mr-1"></i> Nouveaux
                    </button>
                    <button class="btn btn-secondary px-3 py-1 text-sm">
                        <i class="fas fa-plus mr-1"></i> Terminés
                    </button>
                </div>

            </div>
            {% include 'dashboard/widgets/projects.html.twig' %}
        </div>
    </main>

    {% include '/projects/project-modal.html.twig' %}
</div>
{% endblock %}


{% block javascripts %}
{{ parent() }}
<script src="{{ asset('dashboard.js') }}"></script>

<script>
    function toggleModal() {
        const modal = document.getElementById('createProjectModal');
        modal.classList.toggle('hidden');
        modal.classList.toggle('flex');
    }
</script>
{% endblock %}