<div id="createProjectModal" class="hidden relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500/40 transition-opacity" aria-hidden="true"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div
                class="relative transform overflow-hidden rounded-lg bg-black text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl">
                <div class="px-4 pt-5 pb-4 card sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h2 class="font-semibold text-xl mb-5" id="modal-title">Créer un nouveau projet</h2>
                            <form action="" method="post" class="space-y-4 text-white">
                                <!-- Nom du projet -->
                                <div class="space-y-2">
                                    <label for="project-name" class="block text-sm text-zinc-400">Nom du projet</label>
                                    <input type="text" id="project-name" name="project_name" required
                                        class="w-full px-2 py-1 bg-black/40 border border-zinc-800 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8564FA]/50 transition-all"
                                        placeholder="Nom du projet...">
                                </div>

                                <!-- Deadline -->
                                <div class="space-y-2">
                                    <label for="project-deadline" class="block text-sm text-zinc-400">Date
                                        limite</label>
                                    <input type="date" id="project-deadline" name="project_deadline" required
                                        class="w-full px-2 py-1 bg-black/40 border border-zinc-800 rounded-md text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-[#8564FA]/50 transition-all">
                                </div>

                                <!-- Description -->
                                <div class="space-y-2">
                                    <label for="project-description"
                                        class="block text-sm text-zinc-400">Description</label>
                                    <textarea id="project-description" name="project_description" rows="3" required
                                        class="w-full px-2 py-1 bg-black/40 border border-zinc-800 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8564FA]/50 transition-all"
                                        placeholder="Décris ton projet..."></textarea>
                                </div>

                                <!-- Ajout d'utilisateurs -->
                                <div class="space-y-2">
                                    <label for="user-search" class="block text-sm text-zinc-400">Ajouter des
                                        membres</label>
                                    <div class="relative">
                                        <input type="text" id="user-search" name="user_search"
                                            class="w-full px-2 py-1 bg-black/40 border border-zinc-800 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8564FA]/50 transition-all"
                                            placeholder="Rechercher un utilisateur...">
                                        <!-- Dropdown des résultats -->
                                        <ul id="user-suggestions"
                                            class="absolute mt-1 w-full bg-zinc-900 border border-zinc-800 rounded-md max-h-40 overflow-y-auto hidden">
                                            <!-- Exemple d'utilisateur -->
                                            <li class="flex items-center px-2 py-1 hover:bg-zinc-800 cursor-pointer"
                                                data-user-id="1">
                                                <img src="/path/to/avatar.jpg" alt="Avatar"
                                                    class="w-6 h-6 rounded-full mr-2">
                                                <span>Jean Dupont</span>
                                            </li>
                                            <!-- Ajoute dynamiquement ici -->
                                        </ul>
                                    </div>

                                    <!-- Utilisateurs sélectionnés -->
                                    <div id="selected-users" class="flex flex-wrap gap-2 pt-2">
                                        <!-- Exemple -->
                                        <span class="flex items-center px-2 py-1 bg-[#8564FA]/20 text-sm rounded-md">
                                            Jean Dupont
                                            <button type="button"
                                                class="ml-2 text-red-500 hover:text-red-700">&times;</button>
                                        </span>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
                <div class="px-4 py-3 sm:flex space-x-2 justify-end bg-[rgba(24,24,27,0.7)]">
                    <button type="button" class="btn btn-secondary px-4 py-2" onclick="toggleModal()">Annuler</button>
                    <button type="button" class="btn btn-primary px-4 py-2">Créer</button>
                </div>
            </div>
        </div>
    </div>
</div>