<div id="createForumModal" class="hidden relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500/40 transition-opacity" aria-hidden="true"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div
                class="relative transform overflow-hidden rounded-lg bg-black text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl">
                <div class="px-4 pt-5 pb-4 card sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h2 class="font-semibold text-xl mb-5" id="modal-title">Créer un nouveau forum</h2>

                            <form method="post" action="" class="space-y-4">
                                <div>
                                    <label for="title" class="block text-sm font-medium text-white">Titre du
                                        forum</label>
                                    <input type="text" name="title" id="title" required
                                        class="mt-1 block w-full rounded-md border border-zinc-600 bg-zinc-800 text-white p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                </div>

                                <div>
                                    <label for="description"
                                        class="block text-sm font-medium text-white">Description</label>
                                    <textarea name="description" id="description" rows="4" required
                                        class="mt-1 block w-full rounded-md border border-zinc-600 bg-zinc-800 text-white p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"></textarea>
                                </div>

                                <div>
                                    <label for="category" class="block text-sm font-medium text-white">Catégorie</label>
                                    <select name="category" id="category" required
                                        class="mt-1 block w-full rounded-md border border-zinc-600 bg-zinc-800 text-white p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                        <option value="annonce">Annonce</option>
                                        <option value="discussion">Discussion</option>
                                    </select>
                                </div>

                                <div>
                                    <label for="association" class="block text-sm font-medium text-white">Associer
                                        à</label>
                                    <select name="association" id="association" required
                                        class="mt-1 block w-full rounded-md border border-zinc-600 bg-zinc-800 text-white p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                        <option disabled selected value="">-- Choisir un projet ou un événement --
                                        </option>
                                        {# {% for projet in projets %}
                                        <option value="projet_{{ projet.id }}">Projet : {{ projet.nom }}</option>
                                        {% endfor %}
                                        {% for event in evenements %}
                                        <option value="event_{{ event.id }}">Événement : {{ event.nom }}</option>
                                        {% endfor %} #}
                                    </select>
                                </div>

                                <div class="flex justify-end">
                                    <button type="submit" class="btn btn-primary px-4 py-2">
                                        <i class="fas fa-plus-circle mr-2"></i>Créer le forum
                                    </button>
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
                <div class="px-4 py-3 sm:flex space-x-2 justify-end bg-[rgba(24,24,27,0.7)]">
                    <button type="button" class="btn btn-secondary px-4 py-2" onclick="toggleModal()">Annuler</button>
                    <button type="button" class="btn btn-primary px-4 py-2">Créer</button>
                </div>
            </div>
        </div>
    </div>
</div>