{% extends 'base.html.twig' %}

{% block title %}Login | Assosquare{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#0B0C0E] text-white flex flex-col">

    {% include 'components/home_header.html.twig' %}

    <section class="flex-1 flex items-center justify-center pt-16 px-4 md:px-0">
        <div class="container max-w-md mx-auto py-8">
            <div class="bg-zinc-900/50 backdrop-blur-md rounded-xl border border-white/5 shadow-2xl overflow-hidden">

                <div class="flex border-b border-white/5">
                    <a href="{{ path('app_login') }}"
                        class="flex-1 py-4 text-center font-medium transition-colors auth-tab active">
                        Login
                    </a>
                    <a href="{{ path('app_register') }}"
                        class="flex-1 py-4 text-center font-medium transition-colors auth-tab">
                        Sign Up
                    </a>
                </div>

                <div id="login-form" class="auth-form p-6">
                    <h2 class="text-2xl font-medium mb-6 text-center">Welcome Back</h2>

                    {% if login_error is defined %}
                        <div class="bg-red-500/10 border border-red-500/20 text-red-400 px-4 py-3 rounded-md mb-4">
                            {{ login_error }}
                        </div>
                    {% endif %}

                    <form action="" method="post" class="space-y-4">
                        <div class="space-y-2">
                            <label for="login-email" class="block text-sm text-zinc-400">Email</label>
                            <input type="email" id="login-email" name="_username" required
                                class="w-full px-4 py-3 bg-black/40 border border-zinc-800 rounded-md"
                                placeholder="your@email.com">
                        </div>

                        <div class="space-y-2">
                            <div class="flex justify-between items-center">
                                <label for="login-password" class="block text-sm text-zinc-400">Password</label>
                                <a href="#" class="text-xs text-[#8564FA] hover:text-[#8564FA]/80">Forgot password?</a>
                            </div>
                            <input type="password" id="login-password" name="_password" required
                                class="w-full px-4 py-3 bg-black/40 border border-zinc-800 rounded-md"
                                placeholder="••••••••">
                        </div>

                        <div class="flex items-center">
                            <input type="checkbox" id="remember-me" name="_remember_me"
                                class="h-4 w-4 rounded border-zinc-800 bg-black/40 text-[#8564FA]">
                            <label for="remember-me" class="ml-2 block text-sm text-zinc-400">
                                Compte administrateur
                            </label>
                        </div>

                        <button type="submit"
                            class="w-full bg-[#8564FA] hover:bg-[#8564FA]/90 text-white rounded-md px-4 py-3 font-medium">
                            Login
                        </button>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </form>

                    <div class="mt-6 text-center">
                        <p class="text-sm text-zinc-400">
                            Don't have an account?
                            <a href="{{ path('app_register') }}" class="text-[#8564FA] hover:text-[#8564FA]/80">Sign up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
{% endblock %}
