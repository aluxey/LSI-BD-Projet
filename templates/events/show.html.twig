{% extends 'base.html.twig' %}

{% block title %}Nom de l'événement
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-[#0B0C0E] text-white">
		{% include 'components/header.html.twig' %}
		<main class="container mx-auto px-24 py-8">
			<div class="mb-6">
				<a href="/events" class="text-gray-400 hover:text-white flex items-center">
					<i class="fas fa-arrow-left mr-2"></i>
					Retour à la liste des événements
				</a>
			</div>

			<div class="card p-6 fade-in">
				<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 border-b border-[var(--border)] pb-4">
					<h1 class="text-2xl md:text-3xl font-bold gradient-text mb-4 md:mb-0">Soirée Innovation Tech 2025</h1>

					<div class="flex space-x-3">
						<a onclick="toggleModal('createForumEventModal')" class="btn btn-primary px-4 py-2">
							<i class="fas fa-edit mr-2"></i>
							Nouveau forum
						</a>
						<a onclick="toggleModal('editEventModal')" class="btn btn-secondary px-4 py-2">
							<i class="fas fa-edit mr-2"></i>
							Modifier
						</a>
						<button type="button" class="btn btn-secondary px-4 py-2" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cet évenement?')) { document.getElementById('delete-form').submit(); }">
							<i class="fas fa-trash-alt mr-2"></i>
							Supprimer
						</button>

						<form id="delete-form" action="/project/delete/1" method="post" style="display: none;">
							<input type="hidden" name="_method" value="DELETE">
							<input type="hidden" name="_token" value="TOKEN_FICTIF_SUPPRESSION">
						</form>
					</div>
				</div>

				<div
					class="grid grid-cols-1 lg:grid-cols-3 gap-6">
					<!-- Main content -->
					<div
						class="lg:col-span-2 space-y-6">
						<!-- Description -->
						<div class="bg-[rgba(24,24,27,0.7)] p-6 rounded-lg">
							<h2 class="text-xl font-semibold mb-4">Description</h2>
							<div class="text-gray-300">
								<p>Rejoignez-nous pour une soirée dédiée à l'innovation technologique avec des présentations, des démonstrations et du networking.</p>
							</div>
						</div>
					</div>

					<!-- Sidebar -->
					<div
						class="space-y-6">
						<!-- Date and Time -->
						<div class="bg-[rgba(24,24,27,0.7)] p-6 rounded-lg">
							<h2 class="text-xl font-semibold mb-4">Détails</h2>
							<div
								class="space-y-4">
								<!-- Date -->
								<div class="flex items-start">
									<div class="w-10 h-10 rounded-lg bg-[rgba(133,100,250,0.2)] flex items-center justify-center mr-3 flex-shrink-0">
										<i class="fas fa-calendar text-[var(--primary)]"></i>
									</div>
									<div>
										<p class="text-sm text-gray-400">Date</p>
										<p class="font-medium">15/05/2025</p>
									</div>
								</div>

								<!-- All-day event -->
								<div class="flex items-start">
									<div class="w-10 h-10 rounded-lg bg-[rgba(133,100,250,0.2)] flex items-center justify-center mr-3 flex-shrink-0">
										<i class="fas fa-clock text-[var(--primary)]"></i>
									</div>
									<div>
										<p class="text-sm text-gray-400">Durée</p>
										<p class="font-medium">18:00 - 22:00</p>
									</div>
								</div>
							</div>

						</div>
					</div>
				</div>
			</main>
		</div>

		{% include '/events/modals/_create.html.twig' %}
		{% include '/events/modals/_edit.html.twig' %}
		{% include '/events/modals/_create-forum.html.twig' %}
	{% endblock %}

	{% block javascripts %}
		{{ parent() }}
		<script src="{{ asset('dashboard.js') }}"></script>
	{% endblock %}
