<div id="createForumEventModal" class="hidden relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
	<div class="fixed inset-0 bg-gray-500/40 transition-opacity" aria-hidden="true"></div>

	<div class="fixed inset-0 z-10 w-screen overflow-y-auto">
		<div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
			<div class="relative transform overflow-hidden rounded-lg bg-black text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl">
			
				<form
					action="{{ path('app_forum_event_create', { id: event.id }) }}" method="post" class="space-y-4 text-white">
					<div class="px-4 pt-5 pb-4 card sm:p-6 sm:pb-4">
						<div class="sm:flex sm:items-start">
							<div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
								<h2 class="font-semibold text-xl mb-5" id="modal-title">Créer un nouveau forum pour cet événement</h2>
								<!-- Nom du projet -->
								<div class="space-y-2">
									<label for="project-name" class="block text-sm text-zinc-400">Nom du forum</label>
									<input type="text" id="project-name" name="project_name" required class="w-full px-2 py-1 bg-black/40 border border-zinc-800 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8564FA]/50 transition-all" placeholder="Nom du forum...">
								</div>
							</div>
						</div>
					</div>
					<div class="px-4 py-3 sm:flex space-x-2 justify-end bg-[rgba(24,24,27,0.7)]">
						<button type="button" class="btn btn-secondary px-4 py-2" onclick="toggleModal('createForumEventModal')">Annuler</button>
						<button type="submit" class="btn btn-primary px-4 py-2">Créer</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
