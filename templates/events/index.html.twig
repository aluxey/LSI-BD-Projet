{% extends 'base.html.twig' %}

{% block title %}Événements - Assosquare
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-[#0B0C0E] text-white">
		{% include 'components/header.html.twig' %}
		<main class="container mx-auto px-24 py-8">
			<div class="flex flex-col md:flex-row justify-between items-center mb-3">
				<h1 class="text-3xl font-bold gradient-text">Événements</h1>
				<div class="flex space-x-4 mt-4 md:mt-0">
					<button class="btn btn-primary px-4 py-2" onclick="toggleModal('createEventModal')">
						<i class="fas fa-users mr-2"></i>
						Nouvel événement
					</button>
				</div>
			</div>


			<div class="card p-6 fade-in" style="animation-delay: 0.1s">
				<div class="flex justify-between items-center mb-4">
					<h2 class="text-xl font-semibold">La liste de vos événements</h2>
				</div>

				<div class="mt-6">
					<h3 class="text-sm font-medium text-gray-300 mb-3">Événements à venir</h3>

					{% for event in events %}
						<div class="space-y-3">
							<div class="flex items-center p-3 rounded-md bg-[rgba(24,24,27,0.7)] hover:bg-[rgba(24,24,27,0.9)] cursor-pointer">
								<div class="w-2 h-full min-h-[40px] bg-[var(--primary)] rounded-full mr-3"></div>
								<div class="flex-1">
									<a href="event/{{ event.id }}" class="font-medium hover:underline">{{ event.nom }}</a>
									<p class="text-xs text-gray-400">{{ event.dateEvent|date('Y-m-d H:i') }}</p>
								</div>
								<button class="text-gray-400 hover:text-white p-1">
									<i class="fas fa-ellipsis-v"></i>
								</button>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</main>

		{% include '/events/modals/_create.html.twig' %}
	</div>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('dashboard.js') }}"></script>
{% endblock %}
