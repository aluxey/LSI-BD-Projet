<div class="space-y-4">
	{% for forum in forumsEvent|slice(0, 3) %}
		<div class="bg-[rgba(24,24,27,0.7)] p-3 rounded-lg hover:bg-[rgba(24,24,27,0.9)] cursor-pointer">
			<div class="flex items-start">
				<div class="flex-1">
					<div class="flex justify-between">
						<a href="{{ path('app_forums_show', {id: forum.id}) }}" class="font-medium  hover:underline">{{ forum.titre }}</a>
					</div>
					<div class="flex items-center mt-2 text-xs text-gray-400">
						<span class="ml-auto px-2 py-0.5 rounded-full bg-[rgba(76,175,80,0.2)] text-green-500">Evenement</span>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}

	{% for forum in forumsProjet|slice(0, 3) %}
		<div class="bg-[rgba(24,24,27,0.7)] p-3 rounded-lg hover:bg-[rgba(24,24,27,0.9)] cursor-pointer">
			<div class="flex items-start">
				<div class="flex-1">
					<div class="flex justify-between">
						<a href="{{ path('app_forums_show_p', {id: forum.id}) }}" class="font-medium  hover:underline">{{ forum.titre }}</a>
					</div>
					<div class="flex items-center mt-2 text-xs text-gray-400">
						<span class="ml-auto px-2 py-0.5 rounded-full bg-[rgba(175,76,165,0.2)] text-green-500">Projet</span>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
