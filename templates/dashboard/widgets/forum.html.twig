<div class="space-y-4">
    <!-- Sujet 1 -->
    
			<div class="card p-6 fade-in" style="animation-delay: 0.1s">
				<div class="flex justify-between items-center mb-4">
					<h2 class="text-xl font-semibold">La liste de vos forums</h2>
				</div>

				<div
					class="space-y-4">
    {% for forum in forumsEvent %}
        <div class="bg-[rgba(24,24,27,0.7)] p-4 rounded-lg">
            <div class="flex justify-between items-start mb-2">
                <div>
                    <a href="/forum/{{ forum.id }}">
                        <h3 class="font-medium hover:underline">{{ forum.titre }}</h3>
                    </a>
                </div>
                <div class="flex space-x-2">
                    <button class="text-gray-400 hover:text-white">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="text-gray-400 hover:text-white">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
            </div>

            <div class="flex justify-between items-center">
                <span class="text-xs px-2 py-1 rounded-full bg-[rgba(133,100,250,0.2)] text-[var(--primary)]">evenement</span>
            </div>
        </div>
    {% endfor %}
    
    {% for forum in forumsProjet %}
